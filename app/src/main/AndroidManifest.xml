<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.virtusventures.simpleqc">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:name=".QCApplication">
        <activity android:name=".activity.ScansearchselectActivity" />
        <activity android:name=".activity.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.QRActivity" />
        <activity android:name=".activity.QuestionActivity" />
        <activity android:name=".activity.InspectActivity" />
        <activity
            android:name=".activity.ReceiverActivity"
            android:label="@string/title_activity_receiver"
            android:theme="@style/AppTheme" />
        <activity android:name=".activity.ProjectActivity" />
        <activity android:name=".activity.QuestionissueActivity"
            android:windowSoftInputMode="stateVisible">

        </activity>
    </application>

</manifest>